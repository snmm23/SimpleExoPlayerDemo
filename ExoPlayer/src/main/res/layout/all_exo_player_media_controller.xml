<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="12dp"
        android:background="@drawable/exo_top_control_bg">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_return_white" />

        <TextView
            android:id="@+id/title"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/pause"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/zanting" />

    <LinearLayout
        android:id="@+id/controller_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/exo_control_bg"
        android:gravity="center_vertical"
        android:clipChildren="false"
        android:orientation="horizontal">

        <ImageView
            android:visibility="visible"
            android:id="@+id/voice"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_voice" />

        <ImageView
            android:id="@+id/voiceSize"
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/close_voice" />

        <TextView
            android:text="00:00"
            android:layout_marginRight="12dp"
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="3dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_margin="0dp"
            android:minHeight="1dp"
            android:progressDrawable="@drawable/all_exo_bg_bar"
            android:thumb="@drawable/exo_thumb" />

        <TextView
            android:text="00:00"
            android:layout_marginLeft="12dp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/fullscreen_land"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/quanping" />

        <TextView
            android:id="@+id/streamSize"
            android:visibility="gone"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:text="占"
            android:textColor="#fff"
            android:textSize="12sp"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/stream"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="高清"
            android:textColor="#fff"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>